{% extends 'base.html.twig' %}

{% block title %}Nos chambres{% endblock %}

{% block body %}

{% for chambre in chambres %}
    {% if chambre.id is odd %}
        <div class="d-flex align-items-center justify-content-around">
            <div class="flex-shrink-0 w-50">
                <img src="{{chambre.photo}}" alt="la belle photo" class="w-100">
            </div>
            <div class="flex-grow-1 ms-3">
                <h5>{{chambre.titre}}</h5>
                <p>{{chambre.descriptionCourte|raw}}</p>
            </div>            
        </div>            
        <hr>
    {% else %}
        <div class="d-flex align-items-center justify-content-between">
            <div class="flex-grow-1 ms-3">
                <h5>{{chambre.titre}}</h5>
                <p>{{chambre.descriptionCourte|raw}}</p>
            </div>            
            <div class="flex-shrink-0 w-50">
                <img src="{{chambre.photo}}" alt="la belle photo" class="w-100">
            </div>
        </div>
        <hr>
    {% endif %}
{% endfor %}

{% endblock %}